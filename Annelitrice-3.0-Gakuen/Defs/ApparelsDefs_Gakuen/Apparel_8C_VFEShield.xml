<Defs>

    <!-- Shield Base for VFE-->
    <ThingDef Name="Anneli_8C_VFEShieldGakuenBase" ParentName="BaseWeapon" Abstract="True">
        <techLevel>Medieval</techLevel>
        <smeltable>true</smeltable>
        <burnableByRecipe>true</burnableByRecipe>
        <weaponClasses>
            <li>Melee</li>
        </weaponClasses>
        <thingClass>VFECore.Apparel_Shield</thingClass>
        <costStuffCount>75</costStuffCount>
        <stuffCategories>
            <li>Woody</li>
            <li>Metallic</li>
            <li>Stony</li>
        </stuffCategories>
        <statBases>
            <WorkToMake>750</WorkToMake>
            <Mass>3</Mass>
            <StuffEffectMultiplierArmor>0.75</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.90</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.90</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1</EquipDelay>
            <Flammability>0.15</Flammability>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.2</MoveSpeed>
        </equippedStatOffsets>
        <tools>
            <li>
                <label>base</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>centre</label>
                <labelUsedInLogging>false</labelUsedInLogging>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <recipeMaker>
            <useIngredientsForColor>false</useIngredientsForColor>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Tailor</effectWorking>
            <soundWorking>Recipe_Tailor</soundWorking>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
        </recipeMaker>
        <apparel>
            <bodyPartGroups>
                <li>LeftHand</li>
            </bodyPartGroups>
            <layers>
                <li>VFEC_OuterShell</li>
            </layers>
            <careIfWornByCorpse>false</careIfWornByCorpse>
            <careIfDamaged>false</careIfDamaged>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
            <useWornGraphicMask>true</useWornGraphicMask><!--Mask Applied-->
        </apparel>
        <inspectorTabs>
            <li>ITab_Art</li>
        </inspectorTabs>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
            <li Class="CompProperties_Art">
                <nameMaker>NamerArtWeaponMelee</nameMaker>
                <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
                <minQualityForArtistic>Excellent</minQualityForArtistic>
            </li>
            <li>
                <compClass>CompColorable</compClass>
            </li>
        </comps>
    </ThingDef>

